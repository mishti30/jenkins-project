pipeline { 
    agent {
        label 'agent1'
    }
     
    stages {
      stage("checkout scm") {
        steps {
          git branch: 'terraform', url: 'https://github.com/mishti30/jenkins-project.git'
        }
      }

      stage("terraform Init"){
        steps { 
            sh 'terraform init'
        }
      }

      stage("terraform plan"){
        steps {
            sh 'terraform plan'
        }
      } 

      stage("terraform destroy") { 
        steps { 
            sh 'terraform destroy --auto-approve'
        }
      }
      
    }
}